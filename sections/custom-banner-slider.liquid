<!--Start: Banner -->

<div class="home_slider owl-carousel owl-theme">
   {%- for block in section.blocks -%}
  <div class="item">
    <img src="{{ block.settings.image | image_url }}" class="bg">
    <div class="container">
      <div class="bgHeading">
        <h2 class="lineUp">{{ block.settings.title }}</h2>
        <p class="lineUp">{{ block.settings.description }}</p>
        <a href="{{ block.settings.btn_link }}">
          <button class="btn btn-primary get_btn animate__animated animate__slideInUp">{{ block.settings.btn_text }}</button></a>
      </div>
    </div>
  </div>
{% endfor %}
</div>

<!--End: Banner --> 



{% schema %}
  {
 "blocks": [
    {
      "type": "row",
      "name": "Banner slider",
     
      "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label":"Select image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Sub-Heading"
      },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
    ]
  }
 ],
  "presets": [
  {
  "name": "Banner slider"
  }
  ]
}
{% endschema %}
